# Tick Ingestion Service Configuration

# Service
SERVICE_NAME=tick-ingester
ENV=development  # development, staging, production

# gRPC Stream
CONTINUUM_GRPC_URL=localhost:50051
START_TICK=0  # 0 = start from latest, or specify tick number

# Database (TimescaleDB)
DATABASE_URL=postgres://tsdbadmin:fermilabstsdb@q3qz8ken0n.uwi84b59od.tsdb.cloud.timescale.com:36864/tsdb?sslmode=require
DB_MAX_CONNECTIONS=100
DB_MIN_CONNECTIONS=10
DB_MAX_CONN_LIFETIME=30m
DB_MAX_CONN_IDLE_TIME=5m

# Pipeline Configuration
BUFFER_SIZE=10000          # Tick buffer capacity
WORKER_COUNT=8             # Number of worker goroutines
BATCH_SIZE=250             # Ticks per batch write
FLUSH_INTERVAL=100ms       # Max time before flushing batch

# Output Mode
OUTPUT_MODE=timescale      # timescale or console
OUTPUT_FORMAT=json         # json, compact, or table (for console mode)

# Health Check
HEALTH_CHECK_PORT=8081
